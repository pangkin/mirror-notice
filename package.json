{
  "name": "pangkin-mirror-notice",
  "version": "1.0.0",
  "description": "Pangkin Mirror 공지사항 페이지",
  "main": "server.js",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/input.css -o ./public/tailwind.css --minify",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./public/tailwind.css --watch",
    "start": "npm run build:css && node server.js",
    "dev": "npm run build:css && nodemon server.js"
  },
  "keywords": [
    "mirror",
    "notice",
    "markdown"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "gray-matter": "^4.0.3",
    "marked": "^11.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.0.2",
    "tailwindcss": "^3.4.18"
  }
}
